<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, placeholder: "Post title here..." %>
	<br/>
	<%= f.label :url %>
	<%= f.text_field :url, placeholder: "Web link here..." %>
	<br/>
  <%= f.label :description %>
  <%= f.text_field :description, placeholder: "Your description/comment goes here..." %>
  <br/>
  <%= f.label :categories %>
  <%= f.select :categories, options_from_collection_for_select(@categories, 'id', 'name'), {}, multiple: true %>
  <br/>

	<%= f.submit @post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-info' %>
<% end %>
