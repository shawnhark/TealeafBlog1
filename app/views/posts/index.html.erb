<h4>Welcome!</h4>
<ul>
<% @posts.each do |post| %>
	<div class="container-fluid">
    
      <div class="row-fluid">
        <div class="span2">
          <div class="well">
            <div class="text-center">
              <h4><span id="post_<%=post.id%>_votes"><%= post.total_votes %></span></h4>


                <div class="btn-toolbar">
                  <div class="btn-group">
                  <% if logged_in? %>
                    <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true, class: 'btn btn-small', id: "Post_#{post.id}_upvote" do %>
                    <i class="icon-circle-arrow-up"></i>
                    <% end %>
                    <%= link_to vote_post_path(post, vote: false), method: 'post', remote: true, class: 'btn btn-small', id: "Post_#{post.id}_downvote" do %>
                    <i class="icon-circle-arrow-down"></i>
                    <% end %>
                  <% else %>
                    <h5>votes</h5>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>
        <div class="span10">
          <div class="well">
            <h4><%= link_to post.title, post_path(post) %>
        		[<%=link_to 'link', fix_url(post.url) %>]
            </h4>
            <small>
             posted by 
            <%= link_to post.creator.username %>
        		 on <%= display_datetime(post.created_at) %>
        		<%= link_to 'edit', edit_post_path(post) %>
    		    </small>
          </div>
        </div>
      </div>
  
	</div>
<% end %>
</ul>
