<h3><%= @post.title %></h3>
<h4>Description: <%= @post.description %></h4>
<%=link_to "#{@post.url}", fix_url(@post.url) %>
<br>

	<% if logged_in? %>
		<%= render 'shared/errors', obj: @comment %>
	<% end %>

	<h4>Comments:</h4>
	<ol>
		<% @post.comments.each do |comment| %>
	<div class="container-fluid">
    
      <div class="row-fluid">
        <div class="span2">
          <div class="well">
            <div class="text-center">
              <h4><span id="post_<%=comment.id%>_votes"><%= comment.total_votes %></span></h4>

                <div class="btn-toolbar">
                  <div class="btn-group">
                  <% if logged_in? %>

                    <%= link_to vote_post_comment_path(@post, comment, vote: true), method: 'post', remote: true, class: 'btn btn-small', id: "Comment_#{comment.id}_upvote" do %>
                    	<i class="icon-circle-arrow-up"></i>
                    <% end %>
                    <%= link_to vote_post_comment_path(@post, comment, vote: false), method: 'post', remote: true, class: 'btn btn-small', id: "Comment_#{comment.id}_downvote" do %>
                    <i class="icon-circle-arrow-down"></i>
                    <% end %>
                  <% else %>
                    <h5>+/- vote score</h5>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>
        <div class="span10">
          <div class="well">
            <h4><%= comment.body %>
            </h4>
            <small>
             by 
            <%= link_to comment.creator.username %>
        		 on <%= display_datetime(comment.created_at) %>
    		    </small>
          </div>
        </div>
      </div>
  
	</div>

	<% end %>
	</ol>

	<% if logged_in? %>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.text_area :body %>
			</br>
			<%= f.submit "Create comment", class: 'btn btn-primary' %>
		<% end %>
	<% end %>