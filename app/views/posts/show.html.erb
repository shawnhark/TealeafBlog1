<h4>Looking at post: <%= @post.title %></h4>
<p>URL: <%= @post.url %></p>
<p>Description: <%= @post.description %></p>

<p>
	<% if logged_in? %>
		<%= render 'shared/errors', obj: @comment %>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.text_area :body %>
			</br>
			<%= f.submit "Create comment", class: 'btn btn-primary' %>
		<% end %>
	<% end %>

	<h5>Comments:</h5>
	<ol>
		<% @post.comments.each do |comment| %>
    (
     <%= link_to '+',  vote_post_comment_path(comment, vote: true), method: 'post', remote: true %>
     <span id="comment_<%=comment.id%>_votes"><%= comment.total_votes %></span>
     <%= link_to '-',  vote_post_comment_path(comment, vote: false), method: 'post', remote: true %>
     )

			<li><%= comment.body %> Comment made by <%= link_to comment.creator.username %> </li>
	<% end %>
	</ol>


</p>